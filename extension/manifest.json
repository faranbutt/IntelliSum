{
  "name": "News Assistant",
  "version": "1.0",
  "description": "",
  "permissions": [
    "activeTab"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "News Assistant",
    "default_icon": {
      "128": "images/logo.png"
    }
  },
  "icons": {
    "128": "images/logo.png"
  },
  "manifest_version": 3
}
